    <article class="productos__contenedor">
        <div class="container container--width productos__contenedor__tabla">
            <div class="productos__contenedor__tabla__align">
                <div class="row">
                    <form method="POST" action="/carrito" id="prodCarrito" class="elementos">
                        <div class="elementos__caja">
                            <img class="elementos__img" id="thumbProd" name="thumbnail" value={{thumbnail}} src={{thumbnail}} alt={{title}} />
                            <div class="elementos__imgInfo">
                                <div class="elementos__imgInfo__int">
                                    <span class="elementos__imgInfo__int__name" id="titleProd" name="title" value={{title}}>{{title}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="elementos__caja_abajo">
                            <div class="elementos__hbg">
                                <div class="elementos__hbg__hbgInner"></div>
                            </div>
                            <span class="elementos__carri">
                                <span class="elementos__carri__precio" id="priceProd" name="price" value={{price}}>{{price}}</span>
                                <span class="elementos__carri__agregar">
                                <button type="submit" class="elementos__carri__agregar__txt">Agregar al carrito</button>
                            </span>
                        </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </article>